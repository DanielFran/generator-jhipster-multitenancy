<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity <%= tenantNameUpperFirst %>.
    -->
    <changeSet id="<%= changelogDate %>-1" author="jhipster">
        <createTable tableName="<%= tenantDbName %>">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="<%= tenantDbName %>_contact_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

        <addColumn tableName="jhi_user">
            <column name="<%= tenantDbName %>_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <loadData tableName="<%= tenantDbName %>"
                  encoding="UTF-8"
                  file="config/liquibase/<%= tenantDbName %>.csv"
                  separator=";">
        </loadData>

        <addForeignKeyConstraint baseColumnNames="<%= tenantDbName %>_contact_id"
                                 baseTableName="<%= tenantDbName %>"
                                 constraintName="fk_<%= tenantDbName %>_<%= tenantDbName %>_contact_id"
                                 referencedTableName="jhi_user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseColumnNames="<%= tenantDbName %>_id"
                                 baseTableName="jhi_user"
                                 constraintName="fk_user_<%= tenantDbName %>"
                                 referencedTableName="<%= tenantDbName %>"
                                 referencedColumnNames="id"/>

        <rollback>
            truncate <%= tenantDbName %>
        </rollback>
    </changeSet>
</databaseChangeLog>
